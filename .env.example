# Mini CMS - Environment Configuration
# Copy this file to .env and update the values

#--------------------------------------------------------------------
# APPLICATION
#--------------------------------------------------------------------
APP_NAME="Mini CMS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=debug

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=mini_cms
DB_USERNAME=root
DB_PASSWORD=

#--------------------------------------------------------------------
# CACHE & SESSION
#--------------------------------------------------------------------
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

#--------------------------------------------------------------------
# MAIL (Optional - for contact form notifications)
#--------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

#--------------------------------------------------------------------
# BROADCASTING (Pusher for Chat Support)
#--------------------------------------------------------------------
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=ap1

